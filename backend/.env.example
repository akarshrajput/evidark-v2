# Server Configuration
PORT=5050
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/evidark

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Rate Limiting (requests per 15 minutes)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# CORS Configuration (comma-separated origins if multiple)
ALLOWED_ORIGINS=http://localhost:3000

# Logging
LOG_LEVEL=info

# Session Configuration (if using sessions)
# SESSION_SECRET=your_session_secret_here
# SESSION_MAX_AGE=86400000  # 24 hours in milliseconds

# Email Configuration (if sending emails)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_email@example.com
# SMTP_PASS=your_email_password
# EMAIL_FROM=noreply@evidark.com
